<div class="container">
  <h2 class="text-center">Followings</h2>
  <div class="table-responsive">
    <table class="table text-center">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Users</th>
          <th scope="col">Followers</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @followings.each do |following| %>
          <tr>
            <th scope="row"><%= following.id %></th>
            <td> <%= following.user.name %> </td>
            <td> <%= following.follower.name %> </td>
            <% if following.is_accepted %>
              <td> <%= button_to "Remove", user_following_path(@user, following), method: :delete, class: "btn btn-outline-danger mt-1" %> </td>
            <% else %>
              <td style="display: flex; align-items: center; justify-content: center;">
                <div class="pr-3">
                  <%= button_to "Accept", user_following_path(following.user,following), params: { request_status: true }, method: :patch, class: "btn btn-outline-primary mt-1" %>
                </div>
                <div>
                  <%= button_to "Reject", user_following_path(@user, following), method: :delete, class: "btn btn-outline-danger mt-1" %>
                </div>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
