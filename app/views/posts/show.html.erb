<div class="card mx-auto mb-5" style="width: 70rem;">
  <div class="card-header">
    <%= @post.user.name %>
  </div>
  <div class="card-body">
    <%= render "carousel", object: @post %>
    <div class="card-text">
      <%= @post.caption %>
    </div>
    <hr>
    <%= link_to 'New Comment', new_post_comment_path(@post), class: 'btn btn-success' %>
    <%= render "likes/like", object: @post %>
    Likes: <%= @post.likes.count %>
  </div>
  <div class="card-footer">
    <% if @post.user == current_user %>
      <%= link_to 'Edit', edit_post_path(@post) %> |
      <%= link_to 'Destroy', post_path(@post),
            method: :delete,
            data: { confirm: 'Are you sure?' } %> |
      <%= link_to 'Back', user_path(current_user) %>
    <% else %>
      <%= link_to 'Back', posts_path %>
    <% end %>
  </div>
  <div class="card-footer">
    <%= render @post.comments %> <br>
  </div>
</div>
<br>
