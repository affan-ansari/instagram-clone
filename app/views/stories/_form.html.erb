<div class="container">
  <%= form_with(model: @story, local: true) do |form| %>
    <% if @story.errors.any? %>
      <div class="alert alert-danger">
        <div id="error_explanation">
          <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>
          <ul>
            <% @story.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    <div class="form-group">
      <%= form.label :caption, "Caption"%> <br>
      <%= form.text_area :caption, class: "form-control" %> <br>
    </div>
    <div class="form-group">
      <%= form.label :image, "Image"%> <br>
      <%= form.file_field :image, class: "form-control" %>
    </div>
    <div class="actions">
      <%= form.submit "Create Story", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
